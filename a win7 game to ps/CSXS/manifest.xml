<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest 
    ExtensionBundleId="com.yourdomain.memorygame" 
    ExtensionBundleVersion="1.0" 
    Version="8.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <ExtensionList>
        <Extension Id="com.yourdomain.memorygame.panel" Version="1.0" />
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PHXS" Version="[16.0,99.9]" />
            <Host Name="PHSP" Version="[16.0,99.9]" />
            <Host Name="IDSN" Version="[16.0,99.9]" />
            <Host Name="AICY" Version="[16.0,99.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="8.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    
    <DispatchInfoList>
        <Extension Id="com.yourdomain.memorygame.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                        <Parameter>--disable-web-security</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <StartOnEvents>
                        <Event>applicationActivate</Event>
                    </StartOnEvents>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>翻一翻记忆游戏</Menu>
                    <Icons>
                        <Icon Type="Normal">./img/icon1.png</Icon>
                        <Icon Type="DarkNormal">./img/icon2.png</Icon>
                    </Icons>
                    <Geometry>
                        <Size>
                            <Height>700</Height>
                            <Width>800</Width>
                        </Size>
                        <MaxSize>
                            <Height>900</Height>
                            <Width>1000</Width>
                        </MaxSize>
                        <MinSize>
                            <Height>600</Height>
                            <Width>700</Width>
                        </MinSize>
                    </Geometry>
                </UI>
                <DispatchConfiguration>
                    <EventHandler ScriptFile="./jsx/init.js" Handler="onInit" />
                    <EventHandler ScriptFile="./jsx/events.js" Handler="onGameEvent" />
                </DispatchConfiguration>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>